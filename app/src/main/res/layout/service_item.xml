<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="15dp">

    <TextView
        android:id="@+id/textViewEstateNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/imageViewMap"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Estate number 563199/1112" />

    <TextView
        android:id="@+id/textViewLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/textViewEstateNumber"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Land Nordrhein-Westfale" />
    <ImageView
        android:id="@+id/imageViewMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewEstateNumber"/>
    <TextView
        android:id="@+id/textViewArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:layout_marginStart="10dp"
        tools:text="Area 1.00 ha"
        app:layout_constraintTop_toBottomOf="@id/imageViewMap"
        app:layout_constraintStart_toEndOf="@id/imageViewMap"/>
    <TextView
        android:id="@+id/textViewdistrict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/textViewEstateNumber"
        app:layout_constraintTop_toBottomOf="@id/imageViewMap"
        tools:text="District Creglingen" />
</androidx.constraintlayout.widget.ConstraintLayout>